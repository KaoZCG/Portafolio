{
    "version": 2,
    "framework": null,
    "functions": {
      "api/*.php": {
        "runtime": "vercel-php@0.6.0"
      }
    },
    "routes": [
      { "src": "/(css|js|images|fonts|favicon)/(.*)", "dest": "public/$1/$2" },
      { "src": "/(.*)\\.(.+)", "dest": "public/$1.$2" },
      { "src": "/(.*)", "dest": "/api/index.php" }
    ],
    "env": {
      "APP_NAME": "Laravel",
      "APP_ENV": "production",
      "APP_DEBUG": "false",
      "APP_URL": "${VERCEL_URL}",
      "ASSET_URL": "${VERCEL_URL}"
    },
    "buildCommand": "composer install --no-dev && php artisan config:cache && php artisan route:cache && npm ci && npm run build",
    "outputDirectory": "public",
    "installCommand": "composer install && npm install"
  }
{
  "version": 2,
  "builds": [
    {
      "src": "api/index.php",
      "use": "vercel-php@0.6.0"
    }
  ],
  "routes": [
    {
      "src": "/build/assets/(.*)",
      "dest": "public/build/assets/$1"
    },
    {
      "src": "/(css|js|images|fonts|favicon)/(.*)",
      "dest": "public/$1/$2"
    },
    {
      "src": "/(.*)\\.(ico|png|jpg|jpeg|gif|svg|css|js|json|txt|xml|webmanifest)",
      "dest": "public/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_URL": "https://${VERCEL_URL}",
    "ASSET_URL": "https://${VERCEL_URL}"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}
{
  "version": 2,
  "builds": [
    {
      "src": "api/index.php",
      "use": "@vercel/php"
    }
  ],
  "routes": [
    {
      "src": "/build/assets/(.*)",
      "dest": "public/build/assets/$1"
    },
    {
      "src": "/(css|js|images|fonts|favicon)/(.*)",
      "dest": "public/$1/$2"
    },
    {
      "src": "/(.*)\\.(ico|png|jpg|jpeg|gif|svg|css|js|json|txt|xml|webmanifest)",
      "dest": "public/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_URL": "https://${VERCEL_URL}",
    "ASSET_URL": "https://${VERCEL_URL}",
    "LOG_CHANNEL": "stderr",
    "VIEW_COMPILED_PATH": "/tmp/storage/framework/views"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "buildCommand": "composer install --no-dev --no-interaction --prefer-dist --optimize-autoloader && php artisan config:cache && php artisan route:cache && php artisan view:cache && npm install && npm run build",
  "installCommand": "composer install --no-interaction --prefer-dist && npm install",
  "outputDirectory": "public"
}